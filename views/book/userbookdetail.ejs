<script>

    async function borrow(userid, bookid) {

        var r = confirm("確認借取?");

        if (r) {

            var response = await fetch("/user/" + userid + "/borrowbook/add/" + bookid, {
                method: "POST",
                credentials: 'same-origin',
            });

            if (response.ok) {
                var data = await response.json();
                alert(data.message);
                window.location = data.url;
            } else {
                alert("已經借取");
            }

        } else {
            alert("取消");
        }

    };

</script>