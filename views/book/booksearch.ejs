<body onload="pageLoaded()">
    <div class="container">
        <nav role="navigation" class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="/">主頁</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
                aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a class="nav-item nav-link active" href="/item/itemsearch">搜尋 <span
                            class="sr-only">(current)</span></a>
                    <a class="nav-item nav-link active" href="/item/usernoti">通知</a>
                    <a class="nav-item nav-link active" href="/item/useraccount">帳戶</a>
                </div>
            </div>
            

            <!-- <div><%=req.session.username%></div> -->
            <div>登入者: <%=req.session.username%> <a href="/user/logout">登出</a></div>
        </nav>
        <div class="jumbotron jumbotron-fluid">
            <div class="container">
                <h1 class="display-4">基督教協基會社會服務部存貨系統</h1>
                <p class="lead">此存貨系統可用於借還書籍/桌遊/活動物資/禮物(不用歸還)</p>
            </div>
        </div>

        <h2 float:right>書本搜尋</h2>
                <label>種類:</label>
                <form action="/book/bookresult" method="GET">
                    <div class="form-group">
                        <select name="category" class="form-control" required>
                            <option value="">選擇書本種類</option>
                            <option value="小說">小說</option>
                            <option value="自傳">自傳</option>
                            <option value="心理勵志">心理勵志</option>
                            <option value="圖書">圖書</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>書名:</label>
                        <input type="string" class="form-control" name="bookname">
                    </div>
                    <div class="form-group">
                        <label>作者:</label>
                        <input type="string" class="form-control" name="author">
                    </div>
                    <div class="form-group">
                        <label>出版社:</label>
                        <input type="string" class="form-control" name="publisher">
                    </div>
                    <div class="form-group">
                        <label>ISBN:</label>
                        <input type="string" class="form-control" name="ISBN">
                    </div>    
                    <button type="sumbit" class="btn btn-primary">確認搜尋</button>
                </form>

        <div class="row">
            <% book.forEach(function(model) { %>
            <div class="card col-xl-6 col-sm-12">
                <div id="title">
                    <a href="/book/bookdetail/<%=model.id%>">詳細資料頁面 </a>
                </div>
                <p></p>
                <div id="info">
                    <img src=<%=model.photo %> id="photo" width="150" height="150">
                    <ul class="list-group">
                        <li class="list-group-item" id="info">
                            <span id="briefinfo">書名:</span>
                            <%= model.bookname %>
                        </li>

                        <li class="list-group-item" id="info">
                            <span id="briefinfo">作者:</span>
                            <%= model.author %>
                        </li>

                        <li class="list-group-item" id="info">
                            <span id="briefinfo">出版社:</span>
                            <%= model.publisher %>
                        </li>

                    </ul>
                </div>

                <p></p>

            </div>
            <% }); %>

        </div>
    </div>
</body>